<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LL1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/TL11"
        android:layout_width="fill_parent"
        android:layout_height="68px"
        android:background="#ff000f16"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/TR111"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TV_studytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Study Name:"
                android:textColor="#ff6699ff" >
            </TextView>

            <TextView
                android:id="@+id/TV_studyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Johns Hopkins Study"
                android:textColor="#ff6699ff"
                android:textStyle="bold" >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/TR112"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TV_sessiontext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session Name:"
                android:textColor="#ff1d9624" >
            </TextView>

            <TextView
                android:id="@+id/TV_sessionname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Self Reports by Participant"
                android:textColor="#ff1d9624"
                android:textStyle="bold" >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/TR113"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/eventordertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#ffffff99" >
            </TextView>

            <TextView
                android:id="@+id/TV_eventorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textStyle="bold" >
            </TextView>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/LL12"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="#ffcccccc"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL13"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ff101f25"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TV_temp"
            android:layout_width="fill_parent"
            android:layout_height="40px"
            android:gravity="center"
            android:text="" >
        </TextView>

        <RelativeLayout
            android:id="@+id/RL1234"
            android:layout_width="fill_parent"
            android:layout_height="48px" >

            <TextView
                android:id="@+id/TV_taskname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Events to Report"
                android:textColor="#ffffff99"
                android:textSize="20sp"
                android:textStyle="bold" >
            </TextView>
        </RelativeLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ButtonLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_smoking"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.00"
                android:text="SMOKING" android:height="60dp" android:textSize="18dp"/>

            <Button
                android:id="@+id/button_craving"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.00"
                android:text="CRAVING" android:height="60dp" android:textSize="18dp"/>

            <Button
                android:id="@+id/button_movie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.00"
                android:text="WATCHING TV/MOVIE" android:height="60dp" android:textSize="18dp"/>

            <Button
                android:id="@+id/button_game"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.00"
                android:text="PLAYING VIDEO GAMES" android:height="60dp" android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>